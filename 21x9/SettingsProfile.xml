<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!-- This is the settings page for profiles															                            -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<controls>
		<include content="CommonBackground">
			<param name="windowOpen" value="!Window.Previous(settings)" />
			<param name="windowClose" value="!Window.Next(settings)" />
		</include>

		<include>Topbar</include>

		<control type="group">
			<top>140</top>
			<left>0</left>
			<include content="WindowOpenCloseAnimation">
				<param name="windowOpen" value="!Window.Previous(settings)" />
				<param name="windowClose" value="!Window.Next(settings)" />
			</include>

			<!-- Left side -->
			<include>SystemLeftPanel</include>
			<!-- Areas -->
			<control type="panel" id="2">
				<left>81</left>
				<top>61</top>
				<width>358</width>
				<height>610</height>
				<onleft>noop</onleft>
				<onright>9001</onright>
				<onup>2</onup>
				<ondown>2</ondown>
				<itemlayout height="60" width="358">
					<control type="label">
						<width>358</width>
						<height>60</height>
						<font>font15</font>
						<textoffsetx>20</textoffsetx>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="358">
					<control type="image">
						<visible>Control.HasFocus(2)</visible>
						<width>358</width>
						<height>60</height>
						<texture border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texture>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="label">
						<width>358</width>
						<height>60</height>
						<font>font15</font>
						<textoffsetx>20</textoffsetx>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(2)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
			<include>SettingsSkinLogo</include>

			<!-- Right side -->
			<include>SystemRightPanel</include>
			<!-- Control area -->
			<control type="grouplist" id="9001">
				<description>control area</description>
				<left>531</left>
				<top>61</top>
				<width>1340</width>
				<height>600</height>
				<pagecontrol />
				<onleft>2</onleft>
				<onright>2</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<!-- Enable Login screen  -->
				<control type="radiobutton" id="4">
					<label>20096</label>
					<width>1340</width>
					<height>58</height>
					<font>font15</font>
					<textoffsetx>30</textoffsetx>
					<texturefocus border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texturefocus>
				</control>
				<!-- Auto Login  -->
				<control type="button" id="5">
					<label>$LOCALIZE[33084]</label>
					<label2>$INFO[System.ProfileAutoLogin, [COLOR labelheader],[/COLOR]]</label2>
					<width>1340</width>
					<height>58</height>
					<font>font15</font>
					<textoffsetx>30</textoffsetx>
					<texturefocus border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texturefocus>
					<enable>!System.HasLoginScreen</enable>
				</control>
			</control>
			<!-- ??? -->
			<control type="group">
				<left>551</left>
				<top>650</top>
				<control type="image">
					<width>120</width>
					<height>120</height>
					<aspectratio align="left">keep</aspectratio>
					<bordertexture border="1,1,2,1">thumbs/panel_border3.png</bordertexture>
					<bordersize>1,1,2,1</bordersize>
					<texture fallback="unknown-user.png">$INFO[Container(2).Listitem.Icon]</texture>
				</control>
				<control type="label">
					<left>120</left>
					<top>10</top>
					<width>1181</width>
					<height>58</height>
					<aligny>top</aligny>
					<textcolor>labelheader</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<textoffsetx>15</textoffsetx>
					<font>font15_title</font>
					<label>$INFO[Container(2).ListItem.Label]</label>
				</control>
				<control type="label">
					<left>120</left>
					<top>80</top>
					<width>1181</width>
					<height>58</height>
					<textcolor>grey2</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<textoffsetx>15</textoffsetx>
					<font>font15_title</font>
					<label>$INFO[Container(2).ListItem.Label2,$LOCALIZE[31320]: ]</label>
				</control>
			</control>
		</control>

	</controls>
</window>