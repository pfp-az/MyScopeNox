<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!--  This is a pop up window that displays text.                                                                               -->
<!--  Notable use is clicking the plot on the video details view                                                                -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<window id="1132" type="dialog">
	<defaultcontrol always="true">62</defaultcontrol>
	<onunload>ClearProperty(TextViewerHeader,Home)</onunload>
	<onunload>ClearProperty(TextViewerContent,Home)</onunload>
	<controls>
		<!-- A hidden button to close the window -->
		<control type="button" id="62">
			<onclick>Dialog.Close(1132)</onclick>
			<onup>PageUp(61)</onup>
			<ondown>PageDown(61)</ondown>
			<include>HiddenObject</include>
		</control>
		<control type="group">
			<include>DialogOpenCloseAnimation</include>
			<width>1380</width>
			<height>904</height>
			<centerleft>50%</centerleft>
			<centertop>60%</centertop>
			<!-- Backround image -->
			<include content="BuildPanelBackground">
				<param name="height" value="700" />
				<param name="width" value="1380" />
				<param name="bordersize" value="5" />
			</include>
			<!-- Heading Background -->
			<control type="image">
				<top>5</top>
				<left>5</left>
				<width>1370</width>
				<height>60</height>
				<texture border="0,0,0,0" colordiffuse="labelheader">colors\white-trans\10.png</texture>
			</control>
			<!-- Heading label -->
			<control type="label">
				<top>15</top>
				<left>5</left>
				<width>1370</width>
				<height>40</height>
				<align>center</align>
				<textcolor>dialogheader</textcolor>
				<font>font15_title</font>
				<label>$INFO[Window(Home).Property(TextViewerHeader)]</label>
			</control>
			<!-- The text we came here to see -->
			<control type="textbox">
				<description>textarea</description>
				<left>50</left>
				<top>75</top>
				<width>1280</width>
				<height>600</height>
				<font>font_30_ls_13</font>
				<textcolor>grey2</textcolor>
				<pagecontrol>61</pagecontrol>
				<label>$INFO[Window(Home).Property(TextViewerContent)]</label>
			</control>
			<!-- Scrollbar -->
			<control type="scrollbar" id="61">
				<left>1365</left>
				<top>65</top>
				<width>10</width>
				<height>635</height>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>