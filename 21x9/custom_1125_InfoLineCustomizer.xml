<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!--  This is a pop up window on the skin home screen customizer.  It allows selection of the infoline		                    -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<window id="1125" type="dialog">
	<defaultcontrol always="true">90100</defaultcontrol>
	<include>DialogOpenCloseAnimation</include>
	<onunload condition="!String.IsEmpty(Skin.String(ItemToEdit.InfoLine))">Skin.SetString($INFO[Window(Home).Property(Nox.InfoLine)],$INFO[Skin.String(ItemToEdit.InfoLine)])</onunload>
	<onunload>ClearProperty(Nox.InfoLine,Home)</onunload>
	<controls>
		<control type="group">
			<width>590</width>
			<height>550</height>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>

			<!-- Backround Image -->
			<control type="image">
				<top>0</top>
				<left>0</left>
				<width>590</width>
				<height>550</height>
				<texture border="6,6,6,6" colordiffuse="labelheader">background/5px_border.png</texture>
			</control>
			<!-- Heading Background -->
			<control type="image">
				<top>6</top>
				<left>6</left>
				<width>580</width>
				<height>60</height>
				<texture border="0,0,0,0" colordiffuse="labelheader">colors/white-trans/10.png</texture>
			</control>
			<!-- Heading Label -->
			<control type="label">
				<top>16</top>
				<left>6</left>
				<width>580</width>
				<height>40</height>
				<align>center</align>
				<textcolor>dialogheader</textcolor>
				<font>font15_title</font>
				<label>$LOCALIZE[31049]</label>
			</control>
			<control type="list" id="90100">
				<top>66</top>
				<left>6</left>
				<width>580</width>
				<height>480</height>
				<onup>90100</onup>
				<ondown>90100</ondown>
				<onleft>90100</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="60" width="580">
					<control type="label">
						<width>580</width>
						<height>60</height>
						<textoffsetx>15</textoffsetx>
						<font>font14</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="580">
					<control type="image">
						<visible>Control.HasFocus(90100)</visible>
						<width>580</width>
						<height>60</height>
						<texture border="0,0,0,0" colordiffuse="labelheader">focus/60high.png</texture>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="label">
						<width>580</width>
						<height>60</height>
						<textoffsetx>15</textoffsetx>
						<font>font14</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(90100)">Conditional</animation>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[16018]</label>
						<onclick>Skin.Reset(ItemToEdit.InfoLine)</onclick>
						<onclick>Skin.SetString($INFO[Window(Home).Property(Nox.InfoLine)],$INFO[Skin.String(ItemToEdit.InfoLine)])</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31052]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,1)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31053]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,2)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31054]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,3)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31058]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,4)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[20088]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,5)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31061]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,6)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
						<visible>System.HasAddon(script.favourites)</visible>
					</item>
					<item>
						<label>$LOCALIZE[31085]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,7)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[130]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,8)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31097]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,9)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31098]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,10)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31099]</label>
						<onclick>Skin.SetString(ItemToEdit.InfoLine,11)</onclick>
						<onclick>Dialog.Close(1125)</onclick>
					</item>
				</content>
			</control>
			<control type="scrollbar" id="60">
				<top>67</top>
				<left>576</left>
				<width>8</width>
				<height>478</height>
				<onleft>90100</onleft>
				<onright>90100</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>colors/grey/40.png</texturesliderbackground>
				<texturesliderbar>colors/grey/d0.png</texturesliderbar>
				<texturesliderbarfocus colordiffuse="labelheader">colors/white.png</texturesliderbarfocus>
			</control>
		</control>
	</controls>
</window>