<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!-- This is the initial settings page 																	                        -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<menucontrol>9051</menucontrol>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<controls>
		<include content="CommonBackground">
			<param name="windowOpen" value="![Window.Previous(SettingsCategory.xml) | Window.Previous(systeminfo) | Window.Previous(profiles)]" />
			<param name="windowClose" value="![Window.Next(SettingsCategory.xml) | Window.Next(systeminfo) | Window.Next(profiles)]" />
		</include>

		<include>Topbar</include>

		<control type="group" id="50">
			<top>140</top>
			<left>0</left>
			<include content="WindowOpenCloseAnimation">
				<param name="windowOpen" value="![Window.Previous(SettingsCategory.xml) | Window.Previous(systeminfo) | Window.Previous(profiles)]" />
				<param name="windowClose" value="![Window.Next(SettingsCategory.xml) | Window.Next(systeminfo) | Window.Next(profiles)]" />
			</include>

			<!-- Left side -->
			<include>SystemLeftPanel</include>
			<!-- Areas -->
			<control type="panel" id="9000">
				<left>81</left>
				<top>61</top>
				<width>358</width>
				<height>610</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>noop</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemlayout height="60" width="358">
					<control type="label">
						<width>358</width>
						<height>58</height>
						<font>font15</font>
						<align>right</align>
						<textoffsetx>20</textoffsetx>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="358">
					<control type="image">
						<visible>Control.HasFocus(9000)</visible>
						<width>358</width>
						<height>60</height>
						<texture border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texture>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="label">
						<width>358</width>
						<height>60</height>
						<font>font15</font>
						<align>right</align>
						<textoffsetx>20</textoffsetx>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(9000)">Conditional</animation>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>14206</label>
						<property name="description">31400</property>
						<onclick>ActivateWindow(InterfaceSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>14200</label>
						<property name="description">31414</property>
						<onclick>ActivateWindow(PlayerSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>31502</label>
						<property name="description">31409</property>
						<onclick>ActivateWindow(PVRSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>14211</label>
						<property name="description">31415</property>
						<onclick>ActivateWindow(MediaSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>$LOCALIZE[15016]</label>
						<visible>System.GetBool(gamesgeneral.enable)</visible>
						<onclick>ActivateWindow(GameSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>13200</label>
						<property name="description">31407</property>
						<onclick>ActivateWindow(Profiles)</onclick>
						<icon />
					</item>
					<item>
						<label>14036</label>
						<property name="description">31410</property>
						<onclick>ActivateWindow(ServiceSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>13000</label>
						<property name="description">31406</property>
						<onclick>ActivateWindow(SystemSettings)</onclick>
						<icon />
					</item>
					<item>
						<label>10511</label>
						<property name="description">31405</property>
						<onclick>ActivateWindow(SystemInfo)</onclick>
						<icon />
					</item>
					<item>
						<label>LibreELEC</label>
						<onclick>ActivateWindow(3033)</onclick>
						<icon />
					</item>
				</content>
			</control>
			<include>SettingsSkinLogo</include>

			<!-- Right side -->
			<include>SystemRightPanel</include>
			<!-- Background -->
			<control type="image">
				<left>531</left>
				<top>61</top>
				<width>1338</width>
				<height>718</height>
				<aspectratio align="center">scale</aspectratio>
				<texture background="true">special://skin/images/backgrounds/default_settings.jpg</texture>
			</control>
			<!-- Description background-->
			<control type="image">
				<left>530</left>
				<top>570</top>
				<width>1340</width>
				<height>210</height>
				<texture border="0,0,0,0" colordiffuse="labelheader">colors\white-trans\10.png</texture>
			</control>
			<!-- Description -->
			<control type="textbox">
				<left>552</left>
				<top>580</top>
				<width>1256</width>
				<height>400</height>
				<font>font15_textbox</font>
				<textcolor>grey2</textcolor>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
				<label>$INFO[Container(9000).ListItem.Property(description)]</label>
				<animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout">Visible</animation>
				<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="inout">Hidden</animation>
			</control>
		</control>

		<!--  -->
		<control type="group">
			<left>-440</left>
			<include>SideBladeLeft</include>
			<control type="grouplist" id="9050">
				<include>NoMediaMenu</include>
			</control>
		</control>

	</controls>
</window>