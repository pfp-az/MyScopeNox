	<!-- ExtendedInfo area.  Done with many includes so the height can change depending on the scope aspect ratio -->	
	<include name="VariableHeightExtendedInfo"> 
		<param name="isvideodetails" default="false" />
		<param name="isembuaryperson" default="false" />
		<param name="isembuaryvideo" default="false" />
		<param name="totalheight" />
		<param name="textheight" />
