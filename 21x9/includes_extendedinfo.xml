					<param name="posterwidth" value="$PARAM[posterwidth]" />
				</include>
				<!-- Movies from Set -->	
				<include content="ExtendedInfoPanelSetup" condition="$PARAM[isvideodetails] + String.IsEqual(ListItem.DBTYPE,movie) + !String.IsEmpty(ListItem.SetID)" >
