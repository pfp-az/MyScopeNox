<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!-- This file contains all the parts which create the extended info area for video					                            -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<includes>

	<!-- ExtendedInfo area poster content -->
	<include name="ExtendedInfoPanelContent">
		<param name="content" />
		<param name="sortby" />
		<param name="sortorder" />
		<definition>
			<content sortby="$PARAM[sortby]" sortorder="$PARAM[sortorder]" target="videos">$PARAM[content]</content>
			<!-- This is a special case where the cast list is custom and cant use the same method as the other lists -->
			<include content="CastPanelContent" condition="String.IsEmpty($PARAM[content])" />
		</definition>
	</include>

	<!-- ExtendedInfo area poster layout -->
	<include name="ExtendedInfoPanelLayout">
		<param name="focused" default="false" />
		<param name="height" />
		<param name="width" />
		<param name="overlay" />
		<param name="isfanart" />
		<param name="label" />
		<param name="label2" />
		<definition>
			<control type="group">
				<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" condition="$PARAM[focused]">Focus</animation>
				<!-- Image and placeholder for fanart -->
				<control type="group"> 
					<visible>$PARAM[isfanart]</visible> <!-- this group is used to center the fanart in the poster space (not including the label) -->
					<height>$PARAM[height]</height>  
					<width>$PARAM[width]</width>
					<control type="image">
						<height>197</height> <!-- based on width of 350 - keeps 16:9 aspect ratio -->
						<width>$PARAM[width]</width>
						<centertop>50%</centertop>
						<aspectratio>scale</aspectratio>
						<texture background="true" fallback="DefaultPicture.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="2">thumbs\panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
				</control>
				<!-- Image and placeholder for non video (people) -->
				<control type="image"> 
					<visible>!$PARAM[isfanart] + String.IsEmpty(ListItem.DBType)</visible> <!-- not sure is this is the right way to do this -->
					<include content="ConditionalHeight">
						<param name="height" value="$PARAM[height]" />
					</include>
					<include content="ConditionalWidth">
						<param name="width" value="$PARAM[width]" />
					</include>
					<aspectratio>scale</aspectratio>
					<texture background="true" fallback="DefaultActor.png">$INFO[ListItem.Icon]</texture>
					<bordertexture border="2">thumbs\panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
				</control>
				<!-- Image and placeholder for video -->
				<control type="image"> 
					<visible>!$PARAM[isfanart] + !String.IsEmpty(ListItem.DBType)</visible> <!-- not sure is this is the right way to do this -->
					<include content="ConditionalHeight">
						<param name="height" value="$PARAM[height]" />
					</include>
					<include content="ConditionalWidth">
						<param name="width" value="$PARAM[width]" />
					</include>
					<aspectratio>scale</aspectratio>
					<texture background="true" fallback="DefaultMovies.png">$VAR[PosterVar]</texture>
					<bordertexture border="2">thumbs\panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
				</control>
				<!-- Black background for text -->
				<control type="image"> 
					<top>80r</top>
					<height>80</height>
					<texture>colors\black.png</texture>
					<bordersize>2</bordersize>
				</control>
				<!-- Overlay -->
				<control type="image"> 
					<visible>$PARAM[overlay] + [!String.IsEmpty(ListItem.DBID) | !String.IsEmpty(ListItem.Property(DBID))]</visible>
					<right>0</right>
					<width>60</width>
					<height>60</height>
					<texture>overlays\enabled.png</texture>
					<bordersize>2</bordersize>
				</control>
				<!-- Slightly dim unfocused images -->
				<control type="image"> 
					<aspectratio>scale</aspectratio>
					<texture border="1" colordiffuse="44FFFFFF">colors\black.png</texture>
					<bordersize>2</bordersize>
					<include condition="$PARAM[focused]">FocusFadeOutAnimation</include>
				</control>
				<!-- Label -->
				<control type="label">  
					<top>83r</top>
					<height>43</height>
					<align>center</align>
					<font>font_24</font>
					<textoffsetx>10</textoffsetx>
					<shadowcolor>shadow</shadowcolor>
					<selectedcolor>selected</selectedcolor>
					<label>$PARAM[label2]</label>
					<animation effect="fade" start="100" end="70" time="0" condition="!focused">Conditional</animation>
					<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout" condition="focused">Focus</animation>
					<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout" condition="focused">UnFocus</animation>
				</control>
				<!-- Data -->
				<control type="label"> 
					<top>53r</top>
					<height>43</height>
					<align>center</align>
					<font>font_28</font>
					<textoffsetx>10</textoffsetx>
					<shadowcolor>shadow</shadowcolor>
					<selectedcolor>selected</selectedcolor>
					<include content="ConditionalTextColor" condition="$PARAM[focused]">
						<param name="textcolor" value="labelheader" />
					</include>
					<label>$PARAM[label]</label>
					<animation effect="fade" start="100" end="70" time="0" condition="!focused">Conditional</animation>
					<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout" condition="focused">Focus</animation>
					<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout" condition="focused">UnFocus</animation>
				</control>
				<!-- Focused border -->
				<control type="image"> 
					<visible>$PARAM[focused]</visible>
					<texture border="10">thumbs/thumbnail_focused.png</texture>
					<include>FocusFadeInAnimation</include>
				</control>
			</control>
		</definition>
	</include>

	<!-- ExtendedInfo area poster setup -->
	<include name="ExtendedInfoPanelSetup">
		<param name="controlId" />
		<param name="label" default="$INFO[ListItem.Label]" />
		<param name="label2" />
		<param name="customcontent" />
		<param name="content" />
		<param name="overlay" default="false" />
		<param name="sortby" />
		<param name="sortorder" />
		<param name="totalheight" />
		<param name="posterheight" />
		<param name="posterwidth" />
		<param name="isfanart" default="false" />
		<definition>
			<control type="panel" id="$PARAM[controlId]">
				<height>$PARAM[totalheight]</height>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="$PARAM[totalheight]" width="$PARAM[posterwidth]" condition="!Skin.HasSetting(scopeFormat235)">
					<include content="ExtendedInfoPanelLayout">
						<param name="height" value="$PARAM[posterheight]" />
						<param name="width" value="$PARAM[posterwidth]" />
						<param name="overlay" value="$PARAM[overlay]" />
						<param name="isfanart" value="$PARAM[isfanart]" />
						<param name="label" value="$INFO[ListItem.Label]" />
						<param name="label2" value="$PARAM[label2]" />
					</include>
				</itemlayout>
				<itemlayout height="$PARAM[totalheight]" width="$PARAM[posterwidth]" condition="Skin.HasSetting(scopeFormat235)">
					<include content="ExtendedInfoPanelLayout">
						<param name="height" value="$PARAM[posterheight]" />
						<param name="width" value="$PARAM[posterwidth]" />
						<param name="overlay" value="$PARAM[overlay]" />
						<param name="isfanart" value="$PARAM[isfanart]" />
						<param name="label" value="$INFO[ListItem.Label]" />
						<param name="label2" value="$PARAM[label2]" />
					</include>
				</itemlayout>
				<focusedlayout height="$PARAM[totalheight]" width="$PARAM[posterwidth]" condition="!Skin.HasSetting(scopeFormat235)">
					<include content="ExtendedInfoPanelLayout">
						<param name="focused" value="true" />
						<param name="height" value="$PARAM[posterheight]" />
						<param name="width" value="$PARAM[posterwidth]" />
						<param name="overlay" value="$PARAM[overlay]" />
						<param name="isfanart" value="$PARAM[isfanart]" />
						<param name="label" value="$INFO[ListItem.Label]" />
						<param name="label2" value="$PARAM[label2]" />
					</include>
				</focusedlayout>
				<focusedlayout height="$PARAM[totalheight]" width="$PARAM[posterwidth]" condition="Skin.HasSetting(scopeFormat235)">
					<include content="ExtendedInfoPanelLayout">
						<param name="focused" value="true" />
						<param name="height" value="$PARAM[posterheight]" />
						<param name="width" value="$PARAM[posterwidth]" />
						<param name="overlay" value="$PARAM[overlay]" />
						<param name="isfanart" value="$PARAM[isfanart]" />
						<param name="label" value="$INFO[ListItem.Label]" />
						<param name="label2" value="$PARAM[label2]" />
					</include>
				</focusedlayout>
				<!-- Content -->
				<include content="ExtendedInfoPanelContent" condition="$PARAM[customcontent]">
					<param name="content">$PARAM[content]</param>
					<param name="sortby">$PARAM[sortby]</param>
					<param name="sortorder">$PARAM[sortorder]</param>
				</include>
			</control>
		</definition>
	</include>

	<!-- ExtendedInfo area for video, add the plot and media info icons -->	
	<include name="ExtendedInfoPlot"> 
		<param name="totalheight" />
		<param name="textheight" />
		<definition>
			<control type="group" id="90017">
				<height>$PARAM[totalheight]</height> <!-- Don't understand why necessary in all 3 places -->
				<!-- Button -->	
				<control type="button" id="900171">
					<width>0</width>>  <!-- Don't understand why necessary -->
					<height>$PARAM[totalheight]</height> <!-- Don't understand why necessary in all 3 places -->
					<texturenofocus></texturenofocus>
					<onup>9000</onup>
					<ondown>SetFocus(90050)</ondown>
					<onclick>SetProperty(TextViewerHeader,$INFO[ListItem.Label,[B],[/B]],Home)</onclick>
					<onclick>SetProperty(TextViewerContent,$ESCINFO[ListItem.Tagline,[I],[/I][CR]]$ESCINFO[ListItem.Plot]$ESCINFO[ListItem.PlotOutline,[CR]---[CR]],Home)</onclick>
					<onclick>ActivateWindow(1132)</onclick>
				</control>
				<!-- plot -->	
				<control type="textbox">
					<top>10</top>
					<height>$PARAM[textheight]</height>
					<left>36</left>
					<right>36</right>
					<font>font_30_ls_13</font>
					<label>$INFO[ListItem.Plot]</label>
					<textcolor>white</textcolor>
					<pagecontrol />
					<autoscroll time="3000" delay="10000" repeat="10000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
					<animation effect="fade" start="0" end="100" time="500" tween="sine" easing="inout">VisibleChange</animation>
					<animation effect="fade" start="100" end="78" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(900171)">Conditional</animation>
				</control>
				<!-- Icons -->
				<control type="grouplist">
					<top>90r</top>
					<height>90</height>
					<left>-36</left>
					<align>center</align>
					<aligny>center</aligny>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<include>SettingsFadeAnimation</include>
					<!-- Source-->
					<control type="image">
						<width>150</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/video/$VAR[MediaFlagsPath]/$VAR[SourceFlagVar].png</texture>
					</control>
					<!-- Video Resolution -->
					<control type="image">
						<visible>!String.IsEmpty(ListItem.VideoResolution)</visible>
						<width>150</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/resolution/$VAR[MediaFlagsPath]/$INFO[ListItem.VideoResolution].png</texture>
					</control>
					<!-- Aspect Ratio -->
					<control type="image">
						<width>150</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/aspectratio/$VAR[MediaFlagsPath]/$VAR[AspectRatio].png</texture>
					</control>
					<!-- Unknown -->
					<control type="group">
						<visible>String.IsEqual(ListItem.DBType,tvshow) + !String.IsEmpty(ListItem.Property(TotalSeasons))</visible>
						<width>200</width>
						<control type="label">
							<left>0</left>
							<top>2</top>
							<width>200</width>
							<height>60</height>
							<align>center</align>
							<label>$INFO[ListItem.Property(TotalSeasons)]</label>
							<font>font35_bold</font>
							<wrapmultiline>true</wrapmultiline>
							<textcolor>grey</textcolor>
						</control>
						<control type="label">
							<top>52</top>
							<width>200</width>
							<height>30</height>
							<align>center</align>
							<label>[LOWERCASE]$VAR[OneOrMoreSeasonsVar][/LOWERCASE]</label>
							<font>font12</font>
							<textcolor>grey</textcolor>
						</control>
					</control>
					<!-- Audio Codec -->
					<control type="image">
						<visible>!IsEmpty(Control.GetLabel(9904))</visible>
						<width>150</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/audio/$VAR[MediaFlagsPath]/$VAR[AudioCodecCustom].png</texture>
					</control>
					<!-- Unknown -->
					<control type="group">
						<visible>String.IsEqual(ListItem.DBType,tvshow) + !String.IsEmpty(ListItem.Property(TotalEpisodes))</visible>
						<width>200</width>
						<control type="label">
							<left>0</left>
							<top>2</top>
							<width>200</width>
							<height>60</height>
							<align>center</align>
							<label>$INFO[ListItem.Property(TotalEpisodes)]</label>
							<font>font35_bold</font>
							<wrapmultiline>true</wrapmultiline>
							<textcolor>grey</textcolor>
						</control>
						<control type="label">
							<top>52</top>
							<width>200</width>
							<height>30</height>
							<align>center</align>
							<label>[LOWERCASE]$VAR[OneOrMoreEpisodesVar][/LOWERCASE]</label>
							<font>font12</font>
							<textcolor>grey</textcolor>
						</control>
					</control>
					<!-- Audio Channels -->
					<control type="image">
						<visible>!IsEmpty(Control.GetLabel(9902))</visible>
						<width>150</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/channels/$VAR[MediaFlagsPath]/$VAR[AudioChannelCustom].png</texture>
					</control>
					<!-- Unknown -->
					<control type="group">
						<visible>String.IsEqual(ListItem.DBType,tvshow) + !String.IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
						<width>200</width>
						<control type="label">
							<top>2</top>
							<width>200</width>
							<height>60</height>
							<align>center</align>
							<label>$INFO[ListItem.Property(UnWatchedEpisodes)]</label>
							<font>font35_bold</font>
							<wrapmultiline>true</wrapmultiline>
							<textcolor>grey</textcolor>
						</control>
						<control type="label">
							<top>52</top>
							<width>200</width>
							<height>30</height>
							<align>center</align>
							<label>[LOWERCASE]$LOCALIZE[16101][/LOWERCASE]</label>
							<font>font12</font>
							<textcolor>grey</textcolor>
						</control>
					</control>
					<!-- Audio / Subtitle Language -->
					<control type="grouplist">
						<height>90</height>
						<width>160</width>
						<align>center</align>
						<aligny>center</aligny>
						<!-- Audio Language -->
						<control type="grouplist">
							<height>30</height>
							<orientation>horizontal</orientation>
							<control type="group">
								<!-- gap -->
								<width>20</width>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<colordiffuse>grey</colordiffuse>
								<texture>flags/audio.png</texture>
								<visible>!String.IsEmpty(ListItem.Property(AudioLanguage.1))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(AudioLanguage.1),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(AudioLanguage.1))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(AudioLanguage.2),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(AudioLanguage.2))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(AudioLanguage.3),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(AudioLanguage.3))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(AudioLanguage.4),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(AudioLanguage.4))</visible>
							</control>
						</control>
						<!-- Subtitle Language -->
						<control type="grouplist">
							<height>30</height>
							<orientation>horizontal</orientation>
							<control type="group">
								<!-- gap -->
								<width>20</width> 
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<colordiffuse>grey</colordiffuse>
								<texture>flags/subtitles.png</texture>
								<visible>!String.IsEmpty(ListItem.Property(SubtitleLanguage.1))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(SubtitleLanguage.1),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(SubtitleLanguage.1))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(SubtitleLanguage.2),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(SubtitleLanguage.2))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(SubtitleLanguage.3),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(SubtitleLanguage.3))</visible>
							</control>
							<control type="image">
								<width>30</width>
								<height>30</height>
								<include>MediaFlagValues</include>
								<texture>flags/language/default/$INFO[ListItem.Property(SubtitleLanguage.4),,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Property(SubtitleLanguage.4))</visible>
							</control>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

