<?xml version="1.0" encoding="UTF-8"?>
<!-------------------------------------------------------------------------------------------------------------------------------->
<!--  This is a pop up window where the user is requested to make a choice between items in a list.                             -->
<!-------------------------------------------------------------------------------------------------------------------------------->
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<include>DialogOpenCloseAnimation</include>
	<controls>
		<control type="group">
			<left>457</left>
			<top>240</top>
			<!-- Backround Image, narrow variation -->
			<include content="BuildPanelBackground" condition="Control.IsVisible(3) + ![Control.IsVisible(5) | Control.IsVisible(7)]">
				<param name="height" value="610" />
				<param name="width" value="692" />
				<param name="bordersize" value="5" />
			</include>
			<!-- Backround Image, wide variation -->
			<include content="BuildPanelBackground" condition="[Control.IsVisible(5) | Control.IsVisible(7)] | Control.isVisible(6)">
				<param name="height" value="610" />
				<param name="width" value="1050" />
				<param name="bordersize" value="5" />
			</include>
			<!-- Heading Background -->
			<control type="image">
				<top>5</top>
				<left>5</left>
				<width>1040</width>
				<height>60</height>
				<texture border="0,0,0,0" colordiffuse="labelheader">colors\white-trans\10.png</texture>
			</control>
			<!-- Heading Label -->
			<control type="label">
				<top>15</top>
				<left>5</left>
				<width>1040</width>
				<height>40</height>
				<align>center</align>
				<textcolor>dialogheader</textcolor>
				<font>font15_title</font>
				<label>$LOCALIZE[22080]</label>
			</control>

			<!-- A group for images, only id6 -->
			<control type="group">
				<visible>Control.IsVisible(6)</visible>
				<top>75</top>
				<left>725</left>
				<!-- Icon -->
				<control type="image">
					<visible>Control.IsVisible(6) + String.IsEmpty(Container(6).ListItem.Art(poster))</visible>
					<width>300</width>
					<height>332</height>
					<aspectratio aligny="top">keep</aspectratio>
					<texture>$INFO[Container(6).ListItem.Icon]</texture>
					<bordertexture border="5">dialogs/default/inner.png</bordertexture>
					<bordersize>1</bordersize>
				</control>
				<!-- Poster -->
				<control type="image">
					<visible>Control.IsVisible(6) + !String.IsEmpty(Container(6).ListItem.Art(poster))</visible>
					<width>300</width>
					<height>332</height>
					<aspectratio aligny="top">keep</aspectratio>
					<texture>$INFO[Container(6).ListItem.Art(poster)]</texture>
					<bordertexture border="5">dialogs/default/inner.png</bordertexture>
					<bordersize>1</bordersize>
				</control>
			</control>

			<!-- Create the list -->
			<control type="group" id="9000">
				<control type="list" id="3">
					<top>65</top>
					<left>5</left>
					<width>705</width>
					<height>540</height>
					<onup>3</onup>
					<ondown>3</ondown>
					<onleft>5</onleft>
					<onright>60</onright>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<animation effect="slide" start="0" end="157" time="0" tween="quadratic" condition="![Control.IsVisible(5) | Control.IsVisible(7)]">Conditional</animation>
					<itemlayout height="60" width="705">
						<control type="label">
							<width>705</width>
							<height>60</height>
							<textoffsetx>15</textoffsetx>
							<font>font14</font>
							<textcolor>grey2</textcolor>
							<selectedcolor>selected</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<textoffsetx>15</textoffsetx>
							<font>font14</font>
							<textcolor>grey2</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>
					<focusedlayout height="60" width="705">
						<control type="image">
							<visible>Control.HasFocus(3)</visible>
							<width>705</width>
							<height>60</height>
							<include>VisibleFadeAnimation</include>
						<texture border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texture>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<textoffsetx>15</textoffsetx>
							<font>font14</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<scroll>true</scroll>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(3)">Conditional</animation>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<textoffsetx>15</textoffsetx>
							<font>font14</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<label>$INFO[ListItem.Label2]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(3)">Conditional</animation>
						</control>
					</focusedlayout>
				</control>
				<control type="list" id="6">
					<top>65</top>
					<left>5</left>
					<width>705</width>
					<height>540</height>
					<onup>6</onup>
					<ondown>6</ondown>
					<onleft>9001</onleft>
					<onright>60</onright>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<itemlayout height="60" width="705">
						<control type="label">
							<width>705</width>
							<height>60</height>
							<font>font14</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>grey2</textcolor>
							<selectedcolor>selected</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<font>font14</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>grey2</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<label>$VAR[DialogSelectLabel2Var]</label>
						</control>
					</itemlayout>
					<focusedlayout height="60" width="705">
						<control type="image">
							<visible>Control.HasFocus(6)</visible>
							<width>705</width>
							<height>60</height>
							<include>VisibleFadeAnimation</include>
						<texture border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texture>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<font>font14</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(6)">Conditional</animation>
						</control>
						<control type="label">
							<width>705</width>
							<height>60</height>
							<font>font14</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<label>$VAR[DialogSelectLabel2Var]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(6)">Conditional</animation>
						</control>
					</focusedlayout>
				</control>
			</control>

			<!-- A group for buttons -->
			<control type="grouplist" id="9001">
				<left>730</left>
				<top>429</top>
				<height>134</height>
				<onleft>60</onleft>
				<onright>3</onright>
				<ondown>9001</ondown>
				<onup>9001</onup>
				<itemgap>14</itemgap>
				<!-- OK / Manual / Get More -->
				<control type="button" id="5">
					<width>300</width>
					<label>186</label>
					<texturefocus border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texturefocus>
					<texturenofocus border="0,0,0,0" colordiffuse="labelheader">colors\white-trans\10.png</texturenofocus>
				</control>
				<!-- Cancel -->
				<control type="button" id="7">
					<description>Cancel button</description>
					<width>300</width>
					<label />
					<texturefocus border="0,0,0,0" colordiffuse="labelheader">button_focus.png</texturefocus>
					<texturenofocus border="0,0,0,0" colordiffuse="labelheader">colors\white-trans\10.png</texturenofocus>
				</control>
			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="60">
				<left>710</left>
				<top>65</top>
				<height>540</height>
				<width>10</width>
				<onleft>6</onleft>
				<onright>9001</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="55ffffff" border="4">scrollbar/texturesliderbar3.png</texturesliderbar>
				<texturesliderbarfocus border="4">scrollbar/texturesliderbar3.png</texturesliderbarfocus>
				<animation effect="slide" start="0" end="157" time="0" tween="quadratic" condition="Control.IsVisible(3) + ![Control.IsVisible(5) | Control.IsVisible(7)]">Conditional</animation>
			</control>
		</control>

		<!-- Unknown -->
		<control type="label" id="4">
			<width>692</width>
			<height>600</height>
			<align>center</align>
			<font>font14</font>
		</control>
	</controls>
</window>